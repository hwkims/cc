{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:window:allow-set-resizable",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "**" }]
    },
    "shell:allow-open",
    "dialog:allow-open",
    "store:allow-set",
    "store:allow-get",
    "store:allow-save",
    "store:allow-delete"
  ]
}